<% include ../partials/header %>

<div class="row">
  <div class="col-md-3">
    <p class="lead">Camp Details</p>
    <div class="list-group">
      <li class="list-group-item active">Booking Info</li>
      <li class="list-group-item">Gallery</li>
      <li class="list-group-item">Map</li>

    </div>
    <!-- map -->
  </div>
  <div class="col-md-9">
    <div class="thumbnail">
      <img class="img-responsive" src="<%= campground.image %>">
      <div class="caption">
        <h4 class="pull-right">&pound;<%= campground.price %> per night</h4>
        <a href="#"><h3><%= campground.name %></h3></a>
        <h5>Submitted by: <small><%= campground.author.username %></small></h5>
        <hr>
        <p><%= campground.description %></p>
        <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
          <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
          <form  class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE"
            method="post">
            <button class="btn btn-xs btn-danger">Delete</button>
          </form>
        <% } %>
      </div>
    </div>
    <div class="well">
      <div class="text-right">
        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">
          Leave Review</a>
      </div>
      <hr>
      <% campground.comments.forEach(function(comment) { %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="pull-right">
              <%= moment(comment.createdAt).fromNow() %>
            </span>
            <p><%= comment.text %></p>
            <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
              <a class="btn btn-xs btn-warning"
                href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">
                Edit
              </a>
              <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE"
                method="post" class="delete-form">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
              </form>
            <% } %>
          </div>
        </div>
      <%}); %>
    </div>
  </div>

</div>

<% include ../partials/footer %>

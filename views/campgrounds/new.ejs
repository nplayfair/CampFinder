<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1 class="mb-4">Add a new campground</h1>
  </div>
  <div class="col-md-5 col-sm-8 col-xs-1 text-center">
    <form action="/campgrounds" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <input class="form-control" type="text" name="campground[name]" placeholder="Name">
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="campground[price]"
        min="0.01" step="0.01" placeholder="Price per night">
      </div>
      <div class="form-group">
        <label for="image" class="text-left mt-3">Image</label>
        <input type="file" id="image" name="image"
          class="form-control-file" accept="image/*" required>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" class="form-control" name="campground[description]"
          placeholder="About the campground..." rows="3"></textarea>
      </div>
      <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit">
      </div>
    </form>
    <a href="/campgrounds">Go back</a>
  </div>
</div>

<% include ../partials/footer %>
